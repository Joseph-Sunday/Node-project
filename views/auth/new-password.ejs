<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/main.css">
<link rel="stylesheet" href="/css/add-product.css">

<main>
    <h1>Password Reset..</h1>
    <div class="center">
      <% if(errorMessage) { %>
       <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
      <form action="/new-password" method="POST" class="main__form">
        <label for="password" class="main-form__label">New password</label>
        <input type="password" class="main-form__input" placeholder="At least 8 characters long" name="password" id="password">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="passwordToken" value="<%= passwordToken%>">
        <input type="hidden" name="userId" value="<%= userId %>">
        <button class="main-form__button" type="submit">Update password</button>
      </form>
    </div>
</main>
    
<%- include('../includes/end.ejs') %>